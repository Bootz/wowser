source 'https://rubygems.org'
ruby '2.1.0'

# Ruby library for mastering the wizardry that is Blizzard's game files
gem 'blizzardry', github: 'timkurvers/blizzardry'

# Sinatra is a DSL for quickly creating web applications in Ruby with minimal effort
gem 'sinatra'

# An asset pipeline implementation for Sinatra based on Sprockets with support for SASS, CoffeeScript and ERB
gem 'sinatra-asset-pipeline'

# Collection of useful Sinatra extensions
gem 'sinatra-contrib'

group :development do

  # Powerful alternative to the standard IRB shell for Ruby
  gem 'pry'

end
